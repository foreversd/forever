{
  "name": "forever",
  "preferGlobal": "true",
  "description": "A simple CLI tool for ensuring that a given node script runs continuously (i.e. forever)",
  "version": "2.0.0",
  "author": "Charlie Robbins <charlie.robbins@gmail.com>",
  "maintainers": [
    "Igor Savin <iselwin@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/foreverjs/forever.git"
  },
  "keywords": [
    "cli",
    "fault tolerant",
    "sysadmin",
    "tools"
  ],
  "dependencies": {
    "async": "^1.5.2",
    "cliff": "^0.1.10",
    "clone": "^2.1.2",
    "colors": "^0.6.2",
    "flatiron": "~0.4.2",
    "forever-monitor": "^2.0.0",
    "nconf": "^0.10.0",
    "mkdirp": "^0.5.1",
    "nssocket": "^0.6.0",
    "object-assign": "^4.1.1",
    "optimist": "^0.6.1",
    "path-is-absolute": "^2.0.0",
    "prettyjson": "^1.2.1",
    "shush": "^1.0.0",
    "utile": "~0.3.0",
    "winston": "~0.8.1"
  },
  "devDependencies": {
    "broadway": "~0.3.6",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-config-prettier": "^6.5.0",
    "eventemitter2": "^6.0.0",
    "mocha": "^6.2.2",
    "moment": "^2.24.0",
    "prettier": "^1.19.1",
    "request": "2.88.0",
    "vows": "0.7.x"
  },
  "bin": {
    "forever": "./bin/forever"
  },
  "main": "./lib/forever",
  "scripts": {
    "lint": "eslint \"lib/**/*.js\" \"test/**/*.js\"",
    "test:vows": "vows test/**/*-test.js --dot-matrix -i",
    "test:ci": "npm run lint && npm run test:vows",
    "prettier": "prettier --write \"{lib,examples,test}/**/*.js\""
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "LICENSE",
    "CHANGELOG.md",
    "README.md",
    "bin/*",
    "lib/*"
  ],
  "license": "MIT"
}
